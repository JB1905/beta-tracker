{
  "name": "beta-tracker",
  "version": "1.5.0",
  "description": "Check if new Apple betas are available",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "betasDir": "betas",
  "scripts": {
    "prestart": "check-env NEXMO_API_KEY NEXMO_API_SECRET FROM_NUMBER TO_NUMBER",
    "start": "tsc && node lib/index.js",
    "build": "rimraf lib/* && tsc -p .",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "commit": "git-cz"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "check-env": "^1.3.0",
    "diff": "^5.0.0",
    "dotenv": "^8.2.0",
    "nexmo": "^2.9.1",
    "puppeteer": "^5.5.0",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/node": "^14.14.12",
    "@types/puppeteer": "^5.4.2",
    "@typescript-eslint/parser": "^4.9.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
