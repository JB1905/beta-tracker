{
  "name": "beta-tracker",
  "version": "1.1.0",
  "description": "Check if new Apple betas are available",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint src --fix",
    "prettier": "prettier --write 'src/**/*.js'"
  },
  "dependencies": {
    "diff": "^4.0.1",
    "dotenv": "^8.1.0",
    "nexmo": "^2.4.1",
    "puppeteer": "^1.19.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
