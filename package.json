{
  "name": "beta-tracker",
  "version": "1.2.0",
  "description": "Check if new Apple betas are available",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/index.js",
  "betasDir": "betas",
  "scripts": {
    "start": "tsc && node lib/index.js",
    "build": "rimraf lib/* && tsc -p .",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "diff": "^4.0.2",
    "dotenv": "^8.2.0",
    "nexmo": "^2.6.0",
    "puppeteer": "^2.1.1"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^13.11.0",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
